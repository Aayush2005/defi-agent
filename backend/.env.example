# =============================================================================
# DeFi AI Assistant Configuration
# =============================================================================

# =============================================================================
# SYSTEM MODE SELECTION
# =============================================================================
# Controls whether to use demo mode or production mode
USE_DEMO_MODE=true  # true = Demo/Mock Mode, false = Production Mode

# =============================================================================
# AI SYSTEM SELECTION (Only used in Production Mode)
# =============================================================================
USE_GEMINI=true  # true = Free Gemini, false = Paid GPT-5

# =============================================================================
# API KEYS (Only used in Production Mode)
# =============================================================================
# Google AI (Gemini) - Required if USE_GEMINI=true
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI (GPT-5) - Required if USE_GEMINI=false  
OPENAI_API_KEY=your_openai_api_key_here

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=defi-queries

# Observability (Optional)
LANGSMITH_API_KEY=your_langsmith_api_key_here

# =============================================================================
# MODEL CONFIGURATION (Only used in Production Mode)
# =============================================================================
# For Gemini (Free)
INTENT_MODEL=gemini-1.5-flash
QUERY_MODEL=gemini-1.5-pro
ACTION_MODEL=gemini-1.5-flash

# For GPT-5 (Paid) - uncomment when USE_GEMINI=false
# INTENT_MODEL=gpt-5-nano
# QUERY_MODEL=gpt-5-mini
# ACTION_MODEL=gpt-5-mini

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# LangChain settings
LANGCHAIN_TRACING_V2=true

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security and CORS
DEBUG=false
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8501"]

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# USAGE EXAMPLES
# =============================================================================

# For Hackathon Demo (Recommended):
# USE_DEMO_MODE=true
# - No API keys needed
# - 100% reliable responses
# - Lightning fast performance
# - No external dependencies

# For Development with Free Gemini:
# USE_DEMO_MODE=false
# USE_GEMINI=true
# GOOGLE_API_KEY=your_real_key
# - Real AI responses
# - Free tier (15 req/min, 1500/day)
# - Good for testing

# For Production with GPT-5:
# USE_DEMO_MODE=false
# USE_GEMINI=false
# OPENAI_API_KEY=your_real_key
# - Latest AI capabilities
# - Paid but optimized costs
# - Production ready